<!DOCTYPE html>
<html>
  <head>
    <title>Users</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <table class="table table-striped table-hover" id="bootstrap-table">
			<thead>
				<tr>
					<th>Name</th>
					<th>Email/Login</th>
					<th>Company</th>
					<th>User Type</th>
					<th>Created</th>
					<th>Actions</th>
				</th>
			</thead>
			<tbody>
				<%userlist.forEach(function(user){%>
					<tr>
						<td><%=user.firstname + ' ' + user.lastname%></td>
						<td><%=user.emailaddress%></td>

						<td>
							<a class="btn btn-default btn-xs" href="/user/password/<%=user.id%>">Password</a> 
							<a class="btn btn-default btn-xs" href="/user/delete/<%=user.id%>">Delete</a> 
							<a class="btn btn-default btn-xs" href="/user/edit/<%=user.id %>">Edit</a> 
						</td>
					</tr>
				<%});%>
			</tbody>
		</table>
  </body>
</html>
